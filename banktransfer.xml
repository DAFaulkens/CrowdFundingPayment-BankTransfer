                    <option value="1">JYES</option>
                </field>
                <field name="additional_info" type="textarea" label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_ADDITIONAL_INFO" description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_ADDITIONAL_INFO_DESC" class="span6" rows="5" />
                
                <field name="spacer2" type="spacer" hr="true" />
                <field name="send_admin_mail" type="radio" label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_SEND_MAIL_ADMIN" description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_SEND_MAIL_ADMIN_DESC" class="btn-group" default="0">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="send_user_mail" type="radio" label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_SEND_MAIL_USER" description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_SEND_MAIL_USER_DESC" class="btn-group" default="0" >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
			</fieldset>
	            
        </fields>
