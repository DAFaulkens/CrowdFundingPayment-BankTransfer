    <description>PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_DESC</description>
    
    <languages  folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_crowdfundingpayment_banktransfer.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_crowdfundingpayment_banktransfer.sys.ini</language>
