    <help url="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_HELP_URL"/>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
			
    	        <field name="beneficiary" type="editor" 
                    label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_BENEFICIARY" 
                    description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_BENEFICIARY_DESC" 
                    rows="15" 
                    filter="safehtml"
                />
    	        <field name="return_url" type="text"  label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_RETURN_URL" description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_RETURN_URL_DESC" class="span6" />
                
                <field name="display_additional_info" type="radio" label="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_DISPLAY_ADDITIONAL_INFO" description="PLG_CROWDFUNDINGPAYMENT_BANKTRANSFER_DISPLAY_ADDITIONAL_INFO_DESC" class="btn-group" default="1">
